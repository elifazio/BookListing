<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="@dimen/margin_small"
    android:paddingBottom="@dimen/margin_small"
    >

    <TextView
        tools:text="Book title goes here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvBookTitle"

        android:textAppearance="@style/TextAppearance.AppCompat.Title"
/>

    <TextView
        android:id="@+id/tvSubTitle"
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:layout_marginTop="@dimen/margin_small" />

    <TextView
        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce augue tellus, congue at neque quis, tristique consequat tortor. Pellentesque eu nunc efficitur, pellentesque magna eu, faucibus lectus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvDescription"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginTop="@dimen/margin_small"
        android:ellipsize="end"
        android:elegantTextHeight="false"
        android:maxLines="3" />

    <TextView
        tools:text="Author name1, Author name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvAuthors"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:layout_marginTop="@dimen/margin_small" />
</LinearLayout>